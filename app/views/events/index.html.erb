<div class="container mx-auto sm:py-24 pb-10 px-4 relative z-10 flex flex-wrap items-center justify-between">
  <div class="w-full text-center mb-6">
    <p class="text-indigo-600 font-medium mb-3 lg:mt-0 mt-2 dark:text-indigo-500">Next Up</p>
    <h1 class="sm:text-6xl text-4xl font-extrabold">This Weekends Events</h1>
  </div>
  <div class="w-full grid <%= @this_weekends_events.size > 1 ? 'md:grid-cols-2' : 'md:grid-cols-1' %>">
    <% @this_weekends_events.each do |event| %>
      <div class="overflow-hidden rounded-lg shadow transition hover:shadow-lg flex flex-col mx-4 mt-3">
        <%= link_to event_path(event) do %>
            <% if event.track.main_image.attached? %>
              <%= image_tag event.track.main_image, alt: "Homepage Image of Kart", class: "h-32 w-full object-cover" %>
            <% else %>
              <%= image_tag random_default_image, alt: "Events", class: "h-56 w-full object-cover" %>
            <% end %>
          <div class="bg-gradient-to-br from-slate-800 to-slate-900 p-4 sm:p-6">
              <h1 class="text-2xl"><%= event.title %></h1>
              <p class="text-l"><%= event.start_date.strftime("%d/%m/%Y") %></p>
              <p class="text-l"><%= event&.championship&.name %></p>
          </div>
        <% end %>
      </div> 
    <% end %>
  </div>
  

  <div id="calendar-section" class="w-full flex flex-wrap justify-center items-center mt-8">
    <div class="w-full text-center">
      <p class="text-indigo-600 font-medium mb-1 lg:mt-0 mt-2 dark:text-indigo-500">Events</p>
      <h1 class="text-4xl font-bold text-center">Calendar</h1>
      <%= turbo_frame_tag :calendar, src: calendars_path(date: Date.today) %>
    </div>
  </div>
</div>

  <%= turbo_frame_tag :events do %>
    <%= render @events %>
  <% end %>

<div class="container mx-auto mt-8 px-4">
  <h1 class="text-3xl font-semibold mb-4 text-center">Upcoming Events</h1>
  <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4 px-4">
    <% @all_events.each do |event| %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden flex flex-col">
        <% if event.image.present? %>
          <%= image_tag event.image, alt: "Events", class: "w-full h-36 object-cover object-center" %>
        <% else %>
          <%= image_tag random_default_image, alt: "Events", class: "w-full h-36 object-cover object-center" %>
        <% end %>
        <div class="p-4">
          <h2 class="text-xl text-gray-800 font-semibold mb-2"><%= event.title %></h2>
          <p class="text-gray-600 mb-2"><%= event.start_date.strftime('%B %d, %Y') %></p>
          <p class="text-gray-800"><%= event.description.truncate(150, omission: '...') %></p>
        </div>
        <div class="bg-white p-4 space-x-4 flex justify-center">
          <%= link_to "View Details", event_path(event), class: "btn btn-primary" %>
          <% if current_user&.admin? %>
            <%= link_to "Edit Event", edit_event_path(event), class: "btn btn-dark" %> 
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
