<div class="container mx-auto sm:py-24 pb-10 px-4 relative z-10 flex flex-wrap items-center justify-between">
  <div class="w-full text-center">
    <p class="text-indigo-600 font-medium mb-6 lg:mt-0 mt-2 dark:text-indigo-500">Next Up</p>
    <h1 class="sm:text-6xl text-4xl font-extrabold">This Weekends Races and Test Days</h1>
    <p class="my-6 text-slate-700 dark:text-slate-400 text-lg">All Events in one place...</p>
  </div>

  <div class="w-full flex flex-wrap justify-center items-center">
    <div class="w-full mt-6">
      <div class="flex items center justify-between">
        <button class="bg-white dark:bg-slate-800 text-slate-500 dark:text-slate-400 px-6 py-3 rounded-lg mr-4 hover:bg-indigo-500 hover:text-white">Prev</button>
        <button class="bg-white dark:bg-slate-800 text-slate-500 dark:text-slate-400 px-6 py-3 rounded-lg mr-4 hover:bg-indigo-500 hover:text-white">Today</button>
        <button class="bg-white dark:bg-slate-800 text-slate-500 dark:text-slate-400 px-6 py-3 rounded-lg hover:bg-indigo-500 hover:text-white">Next</button>
      </div>
    </div>
  </div>
</div>

<div class="container mx-auto w-1/2">
    <%= turbo_frame_tag 'calendar' do %>
      <%= month_calendar(events: @events) do |date, events| %>
          <% if events.any? %>
            <span class="tooltip">
              <% events.each do |event| %>
                <%= link_to event_path(event), data: { turbo: false } do %>
                  <p class="text-sm text-indigo"><%= event.title %></p>
                  <p class="text-sm"><%= event.track.name %></p>
                <% end %>
              <% end %>
            </span>
          <% end %>
      <% end %>
    <% end %>
  </div>

    <div class="w-full grid <%= @events.size > 1 ? 'lg:grid-cols-2' : 'lg:grid-cols-1' %>">
      <% @events.each do |event| %>
        <div class="flex flex-col items-center text-center mt-6">
          <div class="flex justify-center relative mt-6 mx-4">
            <% if event.image.attached? %>
              <%= image_tag event.image, alt: "Events", class: "max-w-full object-cover rounded-3xl relative z-20 shadow-2xl shadow-slate-5020" %>
            <% else %>
              <%= image_tag random_default_image, alt: "Events", class: "max-w-full object-cover rounded-3xl relative z-20 shadow-2xl shadow-slate-5020" %>
            <% end %>
          </div>
          <div class="w-full text-center mt-6 space-y-2">
            <h1 class="text-4xl"><%= event.title %></h1>
              <p class="text-xl"><%= event.start_date.strftime("%A, %B %e") %></p>
              <p class="text-xl"><%= event.title %></p>
              <p class="text-xl"><%= event.track.name %></p>
              <%= link_to "View Details", (event_path(event)), class: "btn btn-primary text-white-500 mt-2" %>
          </div>
      </div>
    <% end %>
  </div>

<div class="container mx-auto mt-8 px-4">
  <h1 class="text-3xl font-semibold mb-4 text-center">Upcoming Events</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 px-4">
    <% @events.each do |event| %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <% if event.image.present? %>
          <%= image_tag event.image, alt: "Events", class: "w-full h-36 object-cover object-center" %>
        <% else %>
          <%= image_tag "JHPhoto-3115.jpg", alt: "Events", class: "w-full h-36 object-cover object-center" %>
        <% end %>
        <div class="p-4">
          <h2 class="text-xl text-gray-800 font-semibold mb-2"><%= event.title %></h2>
          <p class="text-gray-600 mb-2"><%= event.start_date.strftime('%B %d, %Y') %></p>
          <p class="text-gray-800"><%= event.description.truncate(150, omission: '...') %></p>
        </div>
        <div class="bg-gray-100 p-4">
          <%= link_to "View Details", event_path(event), class: "text-blue-500 hover:underline" %>
          <% if current_user&.admin? %>
            <%= link_to "Edit Event", edit_event_path(event), class: "btn btn-dark" %> 
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>