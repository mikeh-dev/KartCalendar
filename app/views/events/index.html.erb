<div class="container mx-auto sm:py-24 pb-10 px-4 relative z-10 flex flex-wrap items-center justify-between">
  <div class="w-full text-center">
    <p class="text-indigo-600 font-medium mb-6 lg:mt-0 mt-2 dark:text-indigo-500">Next Up</p>
    <h1 class="sm:text-6xl text-4xl font-extrabold">This Weekends Races and Test Days</h1>
    <p class="my-6 text-slate-700 dark:text-slate-400 text-lg">All Events in one place...</p>
  </div>
  <div class="w-full grid <%= @this_weekends_events.size > 1 ? 'grid-cols-3' : 'grid-cols-1' %>">
      <% @this_weekends_events.each do |event| %>
        <div class="flex flex-col items-center text-center mt-6">
          <div class="flex justify-center relative mt-6 mx-10">
            <% if event.image.attached? %>
              <%= image_tag event.image, alt: "Events", class: "max-w-full object-scale-down rounded-3xl relative z-20 shadow-2xl shadow-slate-5020" %>
            <% else %>
              <%= image_tag random_default_image, alt: "Events", class: "max-w-full object-scale-down rounded-3xl relative z-20 shadow-2xl shadow-slate-5020" %>
            <% end %>
          </div>
          <div class="w-full text-center mt-6 space-y-2">
            <h1 class="text-2xl"><%= event.title %></h1>
              <p class="text-l"><%= event.start_date.strftime("%A, %B %e") %></p>
              <p class="text-l"><%= event&.championship&.name %></p>
              <p class="text-l"><%= event.track.name %></p>
              <%= link_to "View Details", (event_path(event)), class: "btn btn-primary text-white-500 mt-2" %>
          </div>
      </div>
    <% end %>
  </div>


  <div class="w-full flex flex-wrap justify-center items-center">
    <div class="w-full mt-6">
      <h1 class="text-4xl font-bold text-center mt-10">Race and Testing Calendar</h1>
      <%= turbo_frame_tag :calendar, src: calendars_path(date: Date.today) %>
    </div>
  </div>
</div>

  <%= turbo_frame_tag :events do %>
    <%= render @events %>
  <% end %>


<div class="container mx-auto mt-8 px-4">
  <h1 class="text-3xl font-semibold mb-4 text-center">Upcoming Events</h1>
    <div id="all_events" class="min-w-full">
      <%= turbo_frame_tag "all_events", src: events_path(format: :turbo_stream), loading: :lazy %>
    </div>

    <% if @all_events.next_page %>
      <%= turbo_frame_tag "load_more", src: events_path(page: @all_events.next_page, format: :turbo_stream), loading: :lazy %>
    <% end %> 
</div>



