<section id="event-hero-section">
  <div class="relative">
    <%= image_tag @event.image.attached? ? @event.image : random_default_image, alt: "Events", class: "absolute inset-0 object-cover w-full h-full" %>
    <div class="relative bg-gray-900 bg-opacity-75">
      <div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
        <div class="flex flex-col items-center justify-between xl:flex-row">
          <div class="w-full max-w-xl mb-12 xl:mb-0 xl:pr-16 xl:w-7/12">
            <% if @event.event_type.present? %>
                <% if @event.event_type == "Test" %>
                  <span class="bg-green-500 text-white px-2 py-1 rounded-full text-sm font-medium">
                    <%= @event.event_type %>
                  </span>
                <% elsif @event.event_type == "Race" %>
                  <span class="bg-indigo-600 text-white px-2 py-1 rounded-full text-sm font-medium">
                    <%= @event.event_type %>
                  </span>
                <% end %>
                <% if @event&.licence.present? && @event&.licence == "MSUK Licence" %>
                  <span class="bg-blue-500 text-white px-2 py-1 rounded-full text-sm font-medium ml-1">
                    <%= @event.licence %>
                  </span>
                <% elsif @event&.licence.present? && @event&.licence == "Non Licensed" %>
                  <span class="bg-rose-500 text-white px-2 py-1 rounded-full text-sm font-medium ml-1">
                    <%= @event.licence %>
                  </span>
                <% end %>
            <% end %>
          
            <% if @event.championship.present? %>
              <% if @event.championship&.logo.present? %>
                <%= image_tag @event.championship.logo, alt: "Championship", class: "w-30 h-10 object-contain mt-5" %>
              <% else %>
                <h1 class="text-4xl font-extrabold text-white sm:text-5xl md:text-6xl mt-5"><%= @event.championship.name %></h1>
                <h3 class="text-2xl font-normal text-white mt-5">at <%= @event.track.name %></h3>
              <% end %>
            <% else %>
              <% if @event.track.logo.present? %>
                <%= image_tag @event.track.logo, alt: "Track", class: "w-30 h-10 object-contain mb-5 mt-5" %>
              <% else %>
                <h1 class="text-4xl font-extrabold text-white sm:text-5xl md:text-6xl mt-5"><%= @event.track.name %></h1>
              <% end %>
            <% end %>
            <p class="max-w-xl mb-4 text-base text-gray-400 md:text-lg">
            </p>
            <p class="mb-10 text-xl"><strong>Date - </strong> <%= @event.start_date == @event.end_date ? @event.start_date.strftime('%d/%m/%Y') : "#{@event.start_date.strftime('%d')} - #{@event.end_date.strftime('%d/%m/%Y')}" %></p>
            <a href="/" aria-label="" class="hidden inline-flex items-center font-semibold tracking-wider transition-colors duration-200 text-teal-accent-400 hover:text-teal-accent-700">
              Learn more
              <svg class="inline-block w-3 ml-2" fill="currentColor" viewBox="0 0 12 12">
                <path d="M9.707,5.293l-5-5A1,1,0,0,0,3.293,1.707L7.586,6,3.293,10.293a1,1,0,1,0,1.414,1.414l5-5A1,1,0,0,0,9.707,5.293Z"></path>
              </svg>
            </a>
          </div>

          <div class="w-full max-w-xl xl:px-8 xl:w-5/12">
            <div class="bg-white rounded shadow-2xl p-7 sm:p-10">
              <h2 class="text-2xl font-semibold text-center text-gray-800"><%= @event.track.location %></h2>
              <div class="max-w-md p-8 mx-auto rounded-lg dark:white dark:text-gray-800">
                <div class="flex justify-around space-x-4">
                  <% if @weather_forecast.present? %>
                    <% today_forecast = @weather_forecast[Date.today]&.first %>
                    <% if today_forecast %>
                      <div class="flex flex-col items-center">
                        <%= image_tag "http://openweathermap.org/img/wn/#{today_forecast['weather'][0]['icon'].gsub('n', 'd')}.png", class: "w-16 h-16 fill-current" %>
                        <h2 class="text-sm font-semibold text-center mt-5"><%= today_forecast['weather'][0]['description'].titleize %></h3>
                      </div>
                      <span class="inline-flex items-center">
                        <span class="font-bold text-7xl leading-none"><%= today_forecast['main']['temp'].round %></span>
                        <span class="font-bold text-3xl leading-none align-top">°C</span>
                      </span>
                    <% end %>
                  <% end %>
                </div>
                <div class="flex justify-between mt-8 space-x-4 dark:text-gray-600">
                  <% if @weather_forecast.present? %>
                    <% @weather_forecast.keys.sort[1..5].each_with_index do |date, i| %>
                      <div class="flex flex-col items-center space-y-1">
                        <span class="uppercase"><%= date.strftime('%a') %></span>
                        <% daily_forecast = @weather_forecast[date]&.first %>
                        <% if daily_forecast %>
                          <%= image_tag "http://openweathermap.org/img/wn/#{daily_forecast['weather'][0]['icon'].gsub('n', 'd')}.png", class: "w-8 h-8 fill-current" %>
                          <span><%= daily_forecast['main']['temp'].round %>°C</span>
                        <% else %>
                          <span>No Data</span>
                        <% end %>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

