<% content_for :title, "Property" %>

<div class="md:py-16 py-6 px-4">
  <div class="container mx-auto">
    <nav class="font-heading text-sm mb-6 text-zinc-700 dark:text-zinc-300">
      <ul class="flex items-center space-x-3">
        <li class="after:content-['/'] after:relative after:text-zinc-300 after:left-1 dark:after:text-zinc-500">
          <%= link_to "Engines", (defined?(engines_path) ? engines_path : "#"), class: "text-primary-600 hover:text-primary-700 dark:text-primary-500 dark:hover:text-primary-600" %>
        </li>
        <li>
          <p><%= @engine.name %></p>
        </li>
      </ul>
    </nav>
    <div class="flex flex-wrap items-center justify-between pb-6 md:pb-0">
      <div class="flex items-center space-x-3 mb-6 flex-1">
        <%= image_tag demo_avatar_url(id: "10", variant: "men"), alt: "Ethan", class: "w-16 h-16 rounded-full border-2 border-white" %>
        <div>
          <h1 class="pb-1 text-4xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight"><%= @engine.name %></h1>
          <div class="text-sm text-zinc-600 pl-1 pb-1 dark:text-zinc-400">
            <%= link_to "View All Engines", engines_path, class: "text-primary-600 hover:text-primary-700 dark:text-primary-500 dark:hover:text-primary-600" %>
          </div>
        </div>
      </div>
      <div class="flex md:justify-end space-x-3 md:w-auto w-full">
        <% if current_user.admin? %>
          <%= link_to "Edit Engine", edit_engine_path(@engine), class: "btn btn-white" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="pb-6 container mx-auto relative" data-controller="gallery">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <a href="<%= image_url('image1.jpg') %>" data-pswp-width="2500" data-pswp-height="1667" target="_blank">
          <%= image_tag "image1.jpg", class: "rounded-xl w-full object-cover h-full" %>
        </a>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <a href="<%= image_url('image1.jpg') %>" data-pswp-width="2000" data-pswp-height="1333" target="_blank">
          <%= image_tag "image1.jpg", class: "rounded-xl w-full object-cover lg:h-[248px] h-[140px]" %>
        </a>
        <a href="<%= image_url('image1.jpg') %>" data-pswp-width="2000" data-pswp-height="1333" target="_blank">
          <%= image_tag "image1.jpg", class: "rounded-xl w-full object-cover lg:h-[248px] h-[140px]" %>
        </a>
        <a href="<%= image_url('image1.jpg') %>" data-pswp-width="2000" data-pswp-height="3000" target="_blank">
          <%= image_tag "image1.jpg", class: "rounded-xl  w-full object-cover lg:h-[248px] h-[140px]" %>
        </a>
        <a href="<%= image_url('image1.jpg') %>" data-pswp-width="2000" data-pswp-height="2588" target="_blank">
          <%= image_tag "image1.jpg", class: "rounded-xl w-full object-cover lg:h-[248px] h-[140px]" %>
        </a>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 pb-24 pt-8">
    <div class="pb-6">
      <h1 class="pb-1 text-2xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight">Engine Details - <%= @engine.name %></h1>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-x-6 gap-y-8">
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "home-modern", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Make</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300"><%= @engine.engine_make.capitalize %></span>
      </div>
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "calendar-days", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Model</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">12 Months</span>
      </div>

      <div>
        <div class="flex items-center space-x-3">
          <%= icon "clock", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Year</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">1/1/2024</span>
      </div>

      <div>
        <div class="flex items-center space-x-3">
          <%= icon "clock", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Last Service</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">31/12/2024</span>
      </div>

      <div>
        <div class="flex items-center space-x-3">
          <%= icon "banknotes", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Barrel Number</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">£850</span>
      </div>
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "user-group", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Current Seal</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">Tenant Name</span>
      </div>
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "sparkles", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Last Serviced by</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">£950</span>
      </div>
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "information-circle", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Notice Period</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">1 Month</span>
      </div>
    </div>


    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-8 pb-24 pt-8">
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "home-modern", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Notes</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300"><%= @engine.notes %></span>
      </div>
      
    </div>
  </div>