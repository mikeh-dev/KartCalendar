<div class="md:pb-6 pb-6 pt-16 md:pt-16 px-4">
  <div class="container mx-auto">
    <nav class="font-heading text-sm mb-6 text-zinc-700 dark:text-zinc-300">
      <ul class="flex items-center space-x-3">
        <li class="after:content-['/'] after:relative after:text-zinc-300 after:left-1 dark:after:text-zinc-500">
          <%= link_to "Engines", (defined?(engines_path) ? engines_path : "#"), class: "text-primary-600 hover:text-primary-700 dark:text-primary-500 dark:hover:text-primary-600" %>
        </li>
        <li>
          <p><%= @engine.name %></p>
        </li>
      </ul>
    </nav>
    <div class="flex flex-wrap items-center justify-between pb-6 md:pb-0">
      <div class="flex items-center space-x-3 mb-6 flex-1">
        <%= image_tag demo_avatar_url(id: "10", variant: "men"), alt: "Ethan", class: "w-16 h-16 rounded-full border-2 border-white hidden" %>
        <div>
          <h1 class="pb-1 text-4xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight"><%= @engine.name %></h1>
          <div class="text-sm text-zinc-600 pl-1 pb-1 dark:text-zinc-400">
            <%= link_to "View All Engines", engines_path, class: "text-primary-600 hover:text-primary-700 dark:text-primary-500 dark:hover:text-primary-600" %>
          </div>
        </div>
      </div>
    </div>
  </div>


<div class="container mx-auto relative" data-controller="engine-gallery">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% displayed_images = 0 %>
    <!-- Render up to 4 photos -->
    <% if @engine.engine_photos.attached? && @engine.engine_photos.any? %>
      <% @engine.engine_photos.limit(4).each do |photo| %>
        <%= image_tag url_for(photo), class: 'lg:h-72 h-72 w-full object-cover rounded-lg' %>
        <% displayed_images += 1 %>
      <% end %>
    <% end %>

    <!-- Add one placeholder if there are fewer than 4 images and the current user is the owner or admin -->
    <% if displayed_images < 4 && (current_user.admin? || current_user == @engine.user) %>
      <%= link_to edit_engine_path(@engine) do %>
        <div class="lg:h-72 h-72 bg-gray-500 rounded-lg flex items-center justify-center text-center text-white text-lg">
          Add an Engine Image
        </div>
      <% end %>
    <% end %>

    <!-- Message for non-owners if there are no images -->
    <% if displayed_images == 0 && !(current_user.admin? || current_user == @engine.user) %>
      <div class="lg:h-72 h-72 bg-gray-500 rounded-lg flex items-center justify-center text-center text-white text-lg">
        No images available
      </div>
    <% end %>
  </div>
</div>


  <div class="container mx-auto px-4 pb-6 pt-8">
    <div class="pb-6">
      <h1 class="pb-1 text-2xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight">Engine Details - <%= @engine.name %></h1>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-x-6 gap-y-8">
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "folder", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Make</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300"><%= @engine.engine_make.capitalize %></span>
      </div>
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "folder", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Model</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300"><%= @engine.engine_model.capitalize %></span>
      </div>

      <div>
        <div class="flex items-center space-x-3">
          <%= icon "calendar", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Year</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300"><%= @engine.year_manufactured %></span>
      </div>

      <div>
        <div class="flex items-center space-x-3">
          <%= icon "wrench", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Last Service</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300"><%= @engine.service_records.any? ? @engine.service_record.last : "No Record" %></span>
      </div>

      <div>
        <div class="flex items-center space-x-3">
          <%= icon "identification", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Barrel Number</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300"><%= @engine.barrel_number %></span>
      </div>
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "identification", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Current Seal</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300"><%= @engine.seal_number %></span>
      </div>
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "wrench", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Last Serviced by</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300"><%= @engine.service_records.any? ? @engine.service_record.last.engine_builder : "No Record" %></span>
      </div>
      
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-8 pt-8">
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "pencil-square", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Notes</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300"><%= @engine.notes %></span>
      </div>
    </div>
  </div>
</div>


  <div class="container mx-auto px-4 pb-6 pt-8">
      <div class="flex space-x-3 md:w-auto w-full">
        <% if current_user.admin? %>
          <%= link_to "Edit Engine", edit_engine_path(@engine), class: "btn btn-white" %>
        <% end %>
      </div>
    </div>    


  <div class="md:py-6 py-6 px-4">
