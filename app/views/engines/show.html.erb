<!-- Simplified Engine Details View -->
<div class="flex flex-wrap justify-center py-12 px-4">

  

  <!-- Engine Details Section with Card Style -->
  <div class="w-full lg:w-1/2 px-4">
    <div class="bg-white shadow-lg rounded-lg p-6">
      <h1 class="text-3xl font-semibold mb-4 text-gray-800"><%= @engine.engine_make %> <%= @engine.engine_model %></h1>
      <!-- Engine Images Display with a Grid Style -->
        <div class="w-full lg:w-full grid grid-cols-4 gap-4 mb-4">
          <% if @engine.engine_photos.attached? %>
            <% @engine.engine_photos.first(4).each do |photo| %>
              <a href="<%= url_for(photo) %>" target="_blank" class="shadow-lg rounded-lg w-full h-auto">
                <%= image_tag photo.variant(resize: "200x200").processed, class: 'rounded-lg w-full h-auto' %>
              </a>
            <% end %>
          <% else %>
            <div class="col-span-2 shadow-lg rounded-lg bg-gray-200 flex items-center justify-center w-full h-60">
              <span class="text-lg text-gray-500">No Images Available</span>
            </div>
          <% end %>
        </div>
      <div class="border-b border-gray-200 mb-4"></div>
      
      <div class="text-gray-700 space-y-2">
        <p><strong>Engine Number:</strong> <%= @engine.engine_number %></p>
        <p><strong>Barrel Number:</strong> <%= @engine.barrel_number %></p>
        <p><strong>Seal Number:</strong> <%= @engine.seal_number %></p>
        <p><strong>Year Manufactured:</strong> <%= @engine.year_manufactured %></p>
      </div>

      <!-- Engine Description with Padded Block -->
      <div class="mt-8 py-4 px-6 bg-gray-50 rounded-lg">
        <h2 class="text-xl font-semibold mb-2 text-gray-800">Notes</h2>
        <p class="text-gray-700"><%= @engine.notes  %></p>
      </div>

      <!-- Engine Actions with Flex Layout -->
      <div class="flex justify-center gap-4 mt-8">
        <%= link_to "Edit Engine", edit_engine_path(@engine), class: "btn btn-primary text-white" %>
        <%= link_to "Back to Engines", engines_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
