<div class="md:pb-6 pb-6 pt-16 md:pt-16 px-4">
  <div class="container mx-auto">
    <nav class="font-heading text-sm mb-6 text-zinc-700 dark:text-zinc-300">
      <ul class="flex items-center space-x-3">
        <li class="after:content-['/'] after:relative after:text-zinc-300 after:left-1 dark:after:text-zinc-500">
          <%= link_to "Engines", (defined?(engines_path) ? engines_path : "#"), class: "text-primary-600 hover:text-primary-700 dark:text-primary-500 dark:hover:text-primary-600" %>
        </li>
        <li>
          <p><%= @engine.name %></p>
        </li>
      </ul>
    </nav>
    <div class="flex flex-wrap items-center justify-between pb-6 md:pb-0">
      <div class="flex items-center space-x-3 mb-6 flex-1">
        <%= image_tag demo_avatar_url(id: "10", variant: "men"), alt: "Ethan", class: "w-16 h-16 rounded-full border-2 border-white hidden" %>
        <div>
          <h1 class="pb-1 text-4xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight"><%= @engine.name %></h1>
          <div class="text-sm text-zinc-600 pl-1 pb-1 dark:text-zinc-400">
            <%= link_to "View All Engines", engines_path, class: "text-primary-600 hover:text-primary-700 dark:text-primary-500 dark:hover:text-primary-600" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto relative" data-controller="engine-gallery">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Check if the engine has a first photo and render it, otherwise render the placeholder -->
    <% if @engine.engine_photos.attached? %>
      <% first_photo = @engine.engine_photos.first %>
      <%= image_tag url_for(first_photo), class: 'lg:h-72 h-72 w-full object-cover rounded-lg' %>
    <% else %>
      <% if current_user.admin? ||  current_user == @engine.user %>
        <%= link_to edit_engine_path(@engine) do %>
          <div class="lg:h-72 h-72 bg-gray-500 rounded-lg flex items-center justify-center text-center text-white text-lg">
            Add an Engine Image
          </div>
        <% end %>
      <% else %>
        <div class="lg:h-72 h-72 bg-gray-500 rounded-lg flex items-center justify-center text-center text-white text-lg">
          No more images available
        </div>
      <% end %>
    <% end %>

    <div>
      <div class="grid grid-cols-2 gap-2">
        <!-- Render the rest of the photos in a smaller photo grid, or placeholders if no photos are present -->
        <% if @engine.engine_photos.attached? && @engine.engine_photos.size > 1 %>
          <% @engine.engine_photos[1..-1].each do |photo| %>
            <%= image_tag url_for(photo), class: 'h-24 w-full object-cover rounded-lg' %>
          <% end %>
        <% end %>

        <!-- Add placeholders if there are not enough photos -->
        <% (5 - @engine.engine_photos.size).times do %>
          <%= link_to edit_engine_path(@engine) do %>
            <div class="h-36 bg-gray-500 rounded-lg flex items-center justify-center text-center text-white text-sm">
              Add an Engine Image
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <div class="container mx-auto px-4 pb-6 pt-8">
    <div class="pb-6">
      <h1 class="pb-1 text-2xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight">Engine Details - <%= @engine.name %></h1>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-x-6 gap-y-8">
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "folder", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Make</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300"><%= @engine.engine_make.capitalize %></span>
      </div>
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "folder", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Model</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">12 Months</span>
      </div>

      <div>
        <div class="flex items-center space-x-3">
          <%= icon "calendar", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Year</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">1/1/2024</span>
      </div>

      <div>
        <div class="flex items-center space-x-3">
          <%= icon "wrench", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Last Service</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">31/12/2024</span>
      </div>

      <div>
        <div class="flex items-center space-x-3">
          <%= icon "identification", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Barrel Number</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">£850</span>
      </div>
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "identification", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Current Seal</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">Tenant Name</span>
      </div>
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "wrench", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Last Serviced by</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300">£950</span>
      </div>
      
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-8 pt-8">
      <div>
        <div class="flex items-center space-x-3">
          <%= icon "pencil-square", classes: "w-5 h-5 text-zinc-500 dark:text-zinc-300" %>
          <p class="font-heading dark:text-zinc-50">Notes</p>
        </div>
        <span class="pl-8 text-zinc-600 dark:text-zinc-300"><%= @engine.notes %></span>
      </div>
    </div>
  </div>
</div>


  <div class="container mx-auto px-4 pb-6 pt-8">
      <div class="flex space-x-3 md:w-auto w-full">
        <% if current_user.admin? %>
          <%= link_to "Edit Engine", edit_engine_path(@engine), class: "btn btn-white" %>
        <% end %>
      </div>
    </div>    


  <div class="md:py-6 py-6 px-4">
    <div class="pb-6 container mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

          <div class="mt-5">
            <div class="pb-6">
              <h1 class="pb-1 text-2xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight text-center">Dyno Details</h1>
            </div>
            <a href="<%= image_url('dyno-for-website_orig.jpg') %>" data-pswp-width="2500" data-pswp-height="1667" target="_blank">
              <%= image_tag "dyno-for-website_orig.jpg", class: "rounded-xl w-full object-cover h-full" %>
            </a>
          </div>

          <div class="mt-12 md:mt-5">
            <div class="pb-6">
              <h1 class="pb-1 text-2xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight text-center">Service Records</h1>
            </div>
            

            <div class="">
                <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                Engine Builder
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Date
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Seal Number
                            </th>
                            <th scope="col" class="px-6 py-3">
                                PDF
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                Force Motorsport
                            </th>
                            <td class="px-6 py-4">
                                17/4/2024
                            </td>
                            <td class="px-6 py-4">
                                FM17637
                            </td>
                            <td class="px-6 py-4">
                              <%= icon "document-arrow-down" %>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
          </div>
        </div>
    </div>
  </div>