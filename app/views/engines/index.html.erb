<% content_for :title, 'Your Engines' %>
<div class="text-center mx-auto">
  <h1 class="text-3xl font-bold mx-auto">Your Engines</h1>
  <% if @engines.empty? %>
    <p class="text-lg">You have no engines yet. <a href="<%= new_engine_path %>">Create one</a></p>
  <% else %>
  <div class="container mx-auto mt-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @engines.each do |engine| %>
        <div class="bg-slate-400 shadow-md rounded-lg p-4">
          <h2 class="text-xl font-bold text-gray-500"><%= engine.engine_make %></h2>
          <p class="text-lg"><%= engine.engine_model %></p>
          <div class="mt-4">
            <%= link_to 'Edit', edit_engine_path(engine), class: 'btn btn-primary' %>
            <%= link_to 'Delete', engine_path(engine), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
</div> 