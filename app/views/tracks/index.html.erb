<div class="container mx-auto px-2 py-4">
  <div class="w-full text-center">
    <p class="text-indigo-600 font-medium mb-1 lg:mt-0 mt-2 dark:text-indigo-500">UK Owner/Driver</p>
    <h1 class="sm:text-6xl text-4xl font-extrabold">Tracks</h1>
  </div>

 <div class="w-full my-6">
  <%= form_with url: search_tracks_path, method: :get, data: { controller: "search", action: "input->search#submit input->search#inputChanged" }, class: "relative" do %>
    <%= text_field_tag :query, params[:query], placeholder: "Search tracks...", class: "block w-full px-5 py-3 text-gray-700 bg-white border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 focus:outline-none transition duration-150 ease-in-out", data: { search_target: "input" } %>
    <button type="submit" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-white bg-indigo-600 hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 font-medium rounded-lg text-sm px-4 py-2">Search</button>
  <% end %>
</div>


  <div class="mt-4" id="map" style="width: 100%; height: 100px; border-radius: 10px;" data-mapbox-token="<%= mapbox_access_token %>"></div>

  <div id="search-results" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-0">
    <%= render partial: "tracks/results", locals: { tracks: @tracks } %>
  </div>
</div>