<div class="container mx-auto px-2 py-4">
  <div class="w-full text-center">
    <p class="text-indigo-600 font-medium mb-1 lg:mt-0 mt-2 dark:text-indigo-500">UK Owner/Driver</p>
    <h1 class="sm:text-6xl text-4xl font-extrabold">Tracks</h1>
  </div>

  <div class="container mx-auto px-2 py-4">
   <%= js_map tracks_path(format: :json), controls: true, tooltips: { hover: false, html: true }, height: "750px" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-0">
    <% @tracks.each do |track| %>
      <% cache(track, skip_digest: true) do %>
        <div class="mt-4 rounded relative overflow-hidden">
          <% if track.main_image.attached? %>
            <%= image_tag track.main_image, alt: "#{track.name} Main Image", class: "w-full h-full object-cover absolute inset-0", loading: "lazy" %>
          <% else %>
            <%= image_tag 'placeholder.webp', alt: "Default Image", class: "w-full h-full object-cover absolute inset-0", loading: "lazy" %>
          <% end %>

          <div class="relative bg-[hsla(0,0%,0%,0.5)] h-full">
            <div class="px-10 py-10 mb-2">
              <h2 class="text-4xl font-bold text-white"><%= track.name %></h2>
              <% if track.events.present? %>
                  <p class="mb-1"><svg class="inline w-5 h-10 text-indigo-600 mr-2 pb-2" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="m11.54 22.351.07.04.028.016a.76.76 0 0 0 .723 0l.028-.015.071-.041a16.975 16.975 0 0 0 1.144-.742 19.58 19.58 0 0 0 2.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 0 0-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 0 0 2.682 2.282 16.975 16.975 0 0 0 1.145.742ZM12 13.5a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" clip-rule="evenodd" />
                  </svg><%= track.location %></p>
                  <p class="mb-4">
                    <span class="font-semibold">Next Race Meeting:</span> -
                    <%= track.events.first.start_date.strftime("%A #{track.events.first.start_date.day.ordinalize} %B %Y") %>
                  </p>
              <% else %>
                <p class="mb-4"><svg class="inline w-5 h-10 text-indigo-600 mr-2 pb-2" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="m11.54 22.351.07.04.028.016a.76.76 0 0 0 .723 0l.028-.015.071-.041a16.975 16.975 0 0 0 1.144-.742 19.58 19.58 0 0 0 2.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 0 0-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 0 0 2.682 2.282 16.975 16.975 0 0 0 1.145.742ZM12 13.5a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" clip-rule="evenodd" />
                </svg><%= track.location %></p>
              <% end %>
              <%= link_to "View Track", track, class: "btn btn-primary" %>
              <% if current_user&.admin? %>
                <%= link_to "Edit Track", edit_track_path(track), class: "btn btn-secondary" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>