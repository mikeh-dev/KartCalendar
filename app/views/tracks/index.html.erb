<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-semibold mb-8">Tracks</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @tracks.each do |track| %>
      <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="bg-cover bg-center h-48" style="background-image: url(<%= asset_url(track.main_image) %>);"></div>
        <div class="px-6 py-4">
          <h2 class="text-xl font-semibold mb-2"><%= track.name %></h2>
          <p class="text-gray-700 text-sm mb-2"><%= track.address %></p>
          <p class="text-gray-700 text-sm mb-2"><%= track.contact_number %></p>
          <p class="text-gray-700 text-sm mb-2">Length: <%= track.length %> miles</p>
          <p class="text-gray-700 text-sm">Email: <%= track.email %></p>
        </div>
        <div class="px-6 py-2">
          <%= link_to "View Details", track, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
