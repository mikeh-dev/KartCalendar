<% if tracks.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-0">
    <% tracks.each do |track| %>
      <%= render partial: "track", locals: { track: track } %>
    <% end %>
  </div>
  <% else %>
  <p class="flex justify-center items-center text-center text-gray-200 text-lg font-semibold mt-4">
    No tracks found - try a different search
  </p>
<% end %>