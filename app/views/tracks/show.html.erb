<section id="map">
  
  <h1 class="text-3xl font-semibold mb-4 text-center mb-5">Find us on Google</h1>
  <div class="relative w-full h-96 mb-10">
      <iframe class="absolute top-0 left-0 w-full h-full"
          src="<%= @track.static_map_url %>"
          frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0">
      </iframe>
  </div>
</section>

<div class="container mx-auto px-4" id="champ-calendar">
  <h1 class="text-3xl font-semibold mb-4 text-center mb-5"> Calendar</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @track_events.each do |track_event| %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <% if track_event.image.attached? %>
        <%= image_tag track_event.image, alt: "Events", class: "w-full h-36 object-cover object-center" %>
      <% else %>
        <%= image_tag "DSC_4486.JPG", alt: "Events", class: "w-full h-36 object-cover object-center" %>
      <% end %>
        <div class="p-4">
          <h2 class="text-gray-800 text-xl font-semibold mb-2"><%= track_event.title %></h2>
          <p class="text-gray-800"><%= track_event.description %></p>
        </div>
        <div class="bg-gray-100 p-4">
          <%= link_to "View Event", event_path(track_event), class: "text-white-500 hover:underline btn btn-primary" %>
          <% if current_user&.admin? %>
            <%= link_to "Edit Event", edit_event_path(track_event), class: "btn btn-dark" %> 
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>