<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="bg-cover bg-center h-64" style="background-image: url(<%= asset_url(@track.main_image) %>);"></div>
    <div class="px-6 py-4">
      <h1 class="text-3xl font-semibold mb-2"><%= @track.name %></h1>
      <p class="text-gray-700 text-sm mb-2"><%= @track.address %></p>
      <p class="text-gray-700 text-sm mb-2"><%= @track.contact_number %></p>
      <p class="text-gray-700 text-sm mb-2">Length: <%= @track.length %> miles</p>
      <p class="text-gray-700 text-sm">Email: <%= @track.email %></p>
    </div>
    <div class="px-6 py-2">
      <%= link_to "Back", tracks_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <%= link_to "Edit", edit_track_path(@track), class: "btn btn-primary" %>
  <%= link_to "Back", tracks_path, class: "btn btn-danger" %>

  
</div>
