<% content_for :title, 'Your Engines' %>
<div class="text-center mx-auto mb-6">
  <h1 class="text-3xl font-bold mx-auto">Your Service Records</h1>
</div>

<div class="bg-gray-100 min-h-screen pt-8">
  <div class="container mx-auto px-4">

  <div class="mb-6">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% if @service_records.empty? %>
          <p class="text-gray-600">You have no Service Records added yet.</p>
        <% else %>
          <% @service_records.each do |record| %>
            <div class="bg-white rounded-lg shadow-lg flex">
              <div class="flex-none w-1/3">
              </div>
              <div class="p-4 w-2/3">
                <h3 class="font-semibold text-lg text-blue-800 mb-2">
                  <%= link_to record.date, engine_service_records_path(record) %>
                </h3>
                <p class="text-gray-600"><strong>Make:</strong> </p>
                <p class="text-gray-600"><strong>Model:</strong> </p>
                <p class="text-gray-600"><strong>Year:</strong> </p>
                <p class="text-gray-600"><strong>Barrel Number:</strong> </p>
                <p class="text-gray-600"><strong>Last Rebuild Date:</strong> </p>
                <p class="text-gray-600"><strong>Current Seal:</strong> </p>
              </div>
            </div>
          <% end %>
        <% end %>
          <%= link_to "Add Service Record", new_engine_service_record_path, class: "btn btn-primary text-white" %>
      </div>
  </div>