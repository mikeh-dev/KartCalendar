<div class="max-w-screen-lg mx-auto">
  <%= form_with(model: [@engine, @service_record], local: true, html: { enctype: 'multipart/form-data' }) do |form| %>
    <% if @service_record.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative my-5" role="alert">
        <strong class="font-bold">Oops!</strong>
        <span class="block sm:inline"> <%= pluralize(@service_record.errors.count, "error") %> prohibited this service from being saved:</span>

        <ul class="list-disc list-inside">
        <% @service_record.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :engine_id, value: @engine.id %>

    <div class="mb-4">
      <%= form.label :service_date, class: "block text-gray-500 text-sm font-bold mb-2" %>
      <%= form.date_field :date, class: "form-input" %>
    </div>

    <div class="mb-4">
      <%= form.label :engine_builder, class: "block text-gray-500 text-sm font-bold mb-2" %>
      <%= form.text_field, :engine_builder class: "form-input" %>
    </div>

    <div class="mb-4">
      <%= form.label :seal_number, class: "block text-gray-500 text-sm font-bold mb-2" %>
      <%= form.text_field :seal_number, class: "form-input" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-gray-500 text-sm font-bold mb-2" %>
      <%= form.text_field :description, class: "form-input" %>
    </div>

    <div class="mb-4">
      <%= form.label :notes, class: "block text-gray-500 text-sm font-bold mb-2" %>
      <%= form.text_area :notes, class: "form-input" %>
    </div>

    <div class="mb-4">
      <%= form.label :dyno_sheets, class: "block mb-2 text-sm font-medium text-gray-500" %>
      <%= form.file_field :dyno_sheets, multiple: true, class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
    </div>

    <div class="mb-4">
      <%= form.label :invoice, class: "block mb-2 text-sm font-medium text-gray-500" %>
      <%= form.file_field :invoice, class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Save Service Record", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <% end %>
    </div>