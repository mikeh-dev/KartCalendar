<span class="<%= championship.champ_type == 'Club' ? 'bg-indigo-600' : 'bg-green-600' %> text-white px-2 py-1 rounded-full text-xs font-medium">
  <%= championship.champ_type %>
</span>

<% if championship&.licence.present? %>
  <% bg_color = championship.licence == "MSUK Licence" ? "bg-blue-500" : "bg-rose-500" %>
  <span class="<%= bg_color %> text-white px-2 py-1 rounded-full text-xs font-medium ml-1">
    <%= championship.licence %>
  </span>
<% end %>