  </ul>

  <div class="container mx-auto flex justify-center mb-2 mt-10">
    <%= link_to 'Submit a Correction', new_contact_path, class: "text-xs inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
