<div class="bg-gray-100 min-h-screen pt-8">
  <div class="container mx-auto px-4">
    
    <div class="mb-10">
      <h1 class="text-4xl font-bold text-gray-800">User Dashboard</h1>
    </div>
    
    <div class="mb-6">
      <h2 class="text-2xl font-semibold text-gray-700 mb-4">Your Championships</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @followed_championships.each do |championship| %>
          <div class="bg-white rounded-lg shadow-lg p-4">
            <h3 class="font-semibold text-lg text-gray-800 mb-2"><%= championship.name %></h3>
            <% championship.events.each do |event| %>
              <p class="text-gray-600"><%= event.name %>: <%= event.date.strftime("%B %d, %Y") %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="mb-6">
      <h2 class="text-2xl font-semibold text-gray-700 mb-4">Upcoming Events</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @timeline_events.each do |event| %>
          <div class="bg-white rounded-lg shadow-lg p-4">
            <h3 class="font-semibold text-lg text-gray-800 mb-2"><%= event.name %></h3>
            <p class="text-gray-600">Date: <%= event.date.strftime("%B %d, %Y") %></p>
            <p class="text-gray-600">Track: <%= event.track.name %></p>
            <p class="text-gray-600">Championship: <%= event.championship.name %></p>
          </div>
        <% end %>
      </div>
    </div>
  
  </div>
</div>
